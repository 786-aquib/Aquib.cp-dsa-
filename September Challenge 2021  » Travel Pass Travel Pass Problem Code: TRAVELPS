#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--){
        int cnt1=0,cnt2=0;
        int n,a,b;
        
        cin>>n>>a>>b;
      string s;
      cin>>s;
        n=s.length();
        
        for(int i=0;i<n;i++){
            if(s[i]=='0'){
                cnt1++;
            }
            else {
                cnt2++;
            }
            
        }
        int aquib=cnt1*a;
        int arman=cnt2*b;
        cout<<aquib+arman<<endl;
    }
	return 0;
}
